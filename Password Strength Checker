<html ng-app="myapp">
<script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script> 
<style>
	body {
		color: blue;
		background: khaki;
		text-align: center
	}
	input{
		size: 15px;
		height: 30px;
	}
	.container{
		height: 15px; 
		width:200px;
		background-color: white; 
		margin-left: 0 auto;
		border: 1px solid black; overflow:hidden
	}
	#child{
		display: flex; 
		height: 100%;
		transition: width 0.1s ease;
	}
</style>
<body ng-controller = "myctrl">
	<h1>Password Strength Checker</h1><br><br>
	<b>Enter your password: <b><br><br><input type = "password"  ng-model = "Pw" ng-change="checkStrength()"><br><br>
	<p>Password Strength  </p>
	<p>{{Pw}}</p>
	<div class = "container"><div id = "child" ng-style = "{'background-color': boxColor, 'width': bar}"></div></div>
	<p>{{Strength}}</p>

</body>
	
<script>
	var app = angular.module('myapp',[]);
	app.controller('myctrl',function($scope){
		$scope.Strength = "Empty"
		$scope.boxColor = "White"
		$scope.checkStrength = function(){
		  const r  = /[A-Z]/.test($scope.Pw); 
			const g = /[a-z]/.test($scope.Pw); 
			const x = /[0-9]/.test($scope.Pw);
			const e = /[!@#$%&?*]/.test($scope.Pw);
			if (!$scope.Pw || $scope.Pw.length === 0) {
          $scope.Strength = "Empty";
          $scope.boxColor = "white";
				  $scope.bar =  "0%"
      } else if ($scope.Pw.length < 6) {
          $scope.Strength = "Very Weak";
          $scope.boxColor = "red";
				  $scope.bar = "25%"
      } else if ((($scope.Pw.length >=6) && ($scope.Pw.length<8)) &&(r || g || x)) {
          $scope.Strength = "Weak";
          $scope.boxColor = "yellow";
				  $scope.bar = "50%"
      } else if (($scope.Pw.length == 8) && (r || g || x) && (e)){
          $scope.Strength = "Strong";
          $scope.boxColor = "orange";
				  $scope.bar =  "75%"
      }else if (($scope.Pw.length >8) && (r && g && x && e)){
          $scope.Strength = "Very Strong";
          $scope.boxColor = "green";
				  $scope.bar =  "100%"
      }
		};
	});
	
</script>
</html>
